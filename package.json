{
  "name": "realtime-voice-platform",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run services:start && npm run dev:server",
    "dev:server": "tsx watch src/services/voice-server/simple-server.ts",
    "build": "tsc && npm run build:all",
    "build:all": "npm run build:core && npm run build:services && npm run build:web",
    "build:core": "cd src/core && tsc",
    "build:services": "cd src/services && tsc",
    "build:web": "cd src/web && next build",
    "start": "tsx src/services/voice-server/voice-server.ts",
    "start:simple": "tsx src/services/voice-server/simple-server.ts",
    "services:start": "docker-compose -f infrastructure/docker/docker-compose.local.yml up -d",
    "services:stop": "docker-compose -f infrastructure/docker/docker-compose.local.yml down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:load": "k6 run tests/load/stress-test.js",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json}'"
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/rate-limit": "^8.1.0",
    "@prisma/client": "^6.14.0",
    "bullmq": "^5.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.0",
    "groq-sdk": "^0.30.0",
    "ioredis": "^5.3.2",
    "mediasoup": "^3.13.0",
    "mediasoup-client": "^3.7.0",
    "nanoid": "^5.0.4",
    "openai": "^4.0.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.11",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "prisma": "^6.14.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
